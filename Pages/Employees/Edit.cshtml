@page "{id:int}"
@model PersoApp.Pages.Employees.EditModel

<h2>Edit Employee</h2>

<form method="post">
    <input type="hidden" name="id" value="@Model.employeeInfo.id" />

    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" name="name" value="@Model.employeeInfo.Name" />
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="text" class="form-control" name="email" value="@Model.employeeInfo.email" />
    </div>
    <div class="form-group">
        <label for="phone">Phone</label>
        <input type="text" class="form-control" name="phone" value="@Model.employeeInfo.phone" />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" name="address" value="@Model.employeeInfo.address" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Employees/Index" class="btn btn-secondary">Cancel</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.errorMessage))
    {
        <div class="alert alert-danger">@Model.errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(Model.successMessage))
    {
        <div class="alert alert-success">@Model.successMessage</div>
    }
</form>

