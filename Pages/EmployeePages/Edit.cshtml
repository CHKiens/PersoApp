@page
@model PersoApp.Pages.EmployeePages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Employee.EmployeeId" />
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Role" class="control-label"></label>
                <input asp-for="Employee.Role" class="form-control" />
                <span asp-validation-for="Employee.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Salary" class="control-label"></label>
                <input asp-for="Employee.Salary" class="form-control" />
                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DateOfEmployment" class="control-label"></label>
                <input asp-for="Employee.DateOfEmployment" class="form-control" />
                <span asp-validation-for="Employee.DateOfEmployment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LocationId">Location</label>
                <select asp-for="Employee.LocationId" class="form-control">
                    <option value="">-- Select a Location --</option>
                    @foreach (var location in Model.locations)
                    {
                        <option value="@location.Id">@location.City</option>
                    }
                </select>
                <span asp-validation-for="Employee.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.AbsenceInHours" class="control-label"></label>
                <input asp-for="Employee.AbsenceInHours" class="form-control" />
                <span asp-validation-for="Employee.AbsenceInHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.ScheduledHours" class="control-label"></label>
                <input asp-for="Employee.ScheduledHours" class="form-control" />
                <span asp-validation-for="Employee.ScheduledHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
